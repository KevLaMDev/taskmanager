<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MainActivity">

    <Button
        android:id="@+id/task1NavButton"
        android:layout_width="108dp"
        android:layout_height="51dp"
        android:layout_marginStart="76dp"
        android:layout_marginEnd="208dp"
        android:text="TASK 1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="434dp" />

    <Button
        android:id="@+id/task2NavButton"
        android:layout_width="109dp"
        android:layout_height="51dp"
        android:layout_marginStart="76dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="208dp"
        android:layout_marginBottom="19dp"
        android:text="TASK 2"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/task3NavButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/task1NavButton" />

    <TextView
        android:id="@+id/mainPageHeader"
        android:layout_width="143dp"
        android:layout_height="52dp"
        android:layout_marginStart="34dp"
        android:layout_marginTop="140dp"
        android:layout_marginEnd="216dp"
        android:text="@string/my_tasks"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/settingsNavButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/ic_menu_preferences"
        tools:layout_editor_absoluteX="295dp"
        tools:layout_editor_absoluteY="142dp" />

    <Button
        android:id="@+id/task3NavButton"
        android:layout_width="108dp"
        android:layout_height="50dp"
        android:layout_marginStart="76dp"
        android:layout_marginEnd="209dp"
        android:layout_marginBottom="202dp"
        android:text="Task 3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>